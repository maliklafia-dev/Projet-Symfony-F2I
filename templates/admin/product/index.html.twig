{% extends 'base.html.twig' %}

{% block title %}
	Products management.
{% endblock %}

{% block body %}
	<h2>Products management.</h2>
	{# message flash de confirmation stock√© en session : message flash #}
	{% for notice in app.flashes('notice') %}
		<p class="alert alert-success">
			{{notice}}</p>
	{% endfor %}
	<p>
		<a href="{{url('admin.product.form')}}" class="btn btn-primary float-right">Add</a>
	</p>

	<table class="table table-striped">
		<tr>
			<th>Image</th>
			<th>Name</th>
			<th>Price</th>
			<th>Quantity</th>
			<th>Action</th>
		</tr>
		{%for product in products%}
			<tr>
				<td class="w-25">
					<img src="{{asset('img/' ~ product.image)}}" class="img-fluid" alt="">
				</td>
				<td>
					{{product.name}}
				</td>
				<td>
					{{product.price}}
				</td>
				<td>
					{{product.quantity}}
				</td>
				<td>
					<a href="{{url('admin.product.update', {id: product.id})}}" class="btn btn-warning ing">Eddit</a>
					<a href="{{url('admin.product.delete', {id: product.id})}}" class="btn btn-danger">Delete</a>
				</td>
			</tr>

		{% endfor %}

	</table>
{% endblock %}
