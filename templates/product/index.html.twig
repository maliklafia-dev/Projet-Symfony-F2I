{% extends "base.html.twig" %}
{% block body %}
	<div class="row">
		<div class="col">
			<h2>Products</h2>
			<p>Liste des produits disponibles</p>
		</div>
	</div>

	<div class="row">
		{% for product in products %}
			<div class="col-4">
				<h3>
					{{product.name}}
				</h3>
				<h3>
					{{product.price | format_currency('EUR', locale='fr') | replace({',00' : ''})}}
				</h3>
				<h3>
					{{product.quantity}}
				</h3>
				<h3>
					<img class="img-fluid" src="{{asset('img/' ~ product.image) }}" alt="">
				</h3>
				<a href="{{url('product.details', {id: product.id})}}" class="btn btn-info">Details</a>
			</div>

		{% endfor %}
	</div>
{% endblock %}
